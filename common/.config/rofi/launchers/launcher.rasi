configuration {
	font:							"Droid Sans Mono 12";
    show-icons:                     true;
	icon-theme: 					"Papirus";
    display-drun: 					"ï‚°";
    drun-display-format:            "{name}";
    disable-history:                true;
    fullscreen:                     true;
	hide-scrollbar: 				true;
	sidebar-mode: 					false;
}

* {
    background:                     #24384F44;
    background-alt:              	#24384Fff;
    background-bar:                 #98AFC7ff;
    foreground:                     #f2f2f2FF;
    accent:			            	#00a896FF;
}

window {
    transparency:                   "real";
    background-color:               @background;
    text-color:                     @foreground;
	border:							0px;
	border-color:					@border;
    border-radius:                  0px;
}

prompt {
    font:							"Hack Nerd Font 20";
    enabled: 						true;
	padding: 						-0.3% 1% 0% 0%;
	background-color: 				@background-alt;
	text-color: 					@foreground;
}

entry {
    font:							"Droid Sans Mono 16";
    background-color:               @background-alt;
    text-color:                     @foreground;
    placeholder-color:              @foreground;
    expand:                         true;
    horizontal-align:               0;
    placeholder:                    "Search";
    padding:                        0%;
    blink:                          true;
}

inputbar {
	children: 						[ prompt, entry ];
    background-color:               @background-alt;
    text-color:                     @foreground;
    expand:                         false;
	border:							0.2% 0% 0.2% 0%;
    border-radius:                  12px;
	border-color:					@accent;
    margin:                         0% 25% 0% 25%;
    padding:                        1.5%;
}

listview {
    background-color:               @background-alt;
    columns:                        8;
    lines:                          4;
    border-radius:                  12px;
    border:							2.5px;
    border-color:					@accent;
    spacing:                        0%;
    cycle:                          false;
    dynamic:                        true;
    layout:                         vertical;
}

mainbox {
    background-color:               @background;
	border:							0% 0% 0% 0%;
    border-radius:                  0%;
	border-color:					@accent;
    children:                       [ inputbar, listview ];
    spacing:                       	3.5%;
    padding:                        10% 12.5% 10% 12.5%;
}

element {
    background-color:               @background-alt;
    text-color:                     @foreground;
    orientation:                    vertical;
    border-radius:                  0%;
    padding:                        1% 0% 2% 0%;
}

element-icon {
    size:                           80px;
    border:                         0px;
}

element-text {
    expand:                         true;
    horizontal-align:               0.5;
    vertical-align:                 0.5;
    margin:                         0.5% 0.5% -0.5% 0.5%;
}

element selected {
    background-color:               @accent;
    text-color:                     @foreground;
	border:							0% 0% 0% 0%;
    border-radius:                  10px;
    border-color:                  	@accent;
}
