
!
! rofi Config Gaps
!
! Adapted From https://github.com/ganifladi/linux/blob/master/config/rofi/config
! By Richard Rabe
!

! Location
! 1   2   3
! 8   0   4
! 7   6   5
rofi.location: 0
rofi.xoffset: 0
rofi.yoffset: 0

! "Enabled modi" Set from: Default
!rofi.modi: run

! "Window width" Set from: Default
rofi.width: 600

! "Padding" Set from: Default
rofi.padding: 5

! "Number of lines" Set from: Default
rofi.lines: 7
rofi.line-margin: 5
rofi.line-padding: 2

! "Font to use" Set from: Default
rofi.font: Hack 12

! Tab to Advance
rofi.kb-row-select "Tab"
rofi.kb-row-tab ""
! Misc
rofi.sidebar-mode: true
rofi.drun-display-format:{name}
rofi.theme: /usr/share/rofi/themes/Arc-Dark.rasi
