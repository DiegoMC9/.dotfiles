#!/bin/bash

## Author : Aditya Shakya
## Github : adi1090x

SDIR="$HOME/.config/polybar/scripts"

MENU="$(rofi -sep "|" -dmenu -i -p 'Select' -location 1 -xoffset 215 -yoffset 32 -columns 1 -width 10 -hide-scrollbar -line-padding 4 -padding 20 -lines 6 <<< " Contrast| Archlinux| Solarized| Crimson| Tropical| Aquamarine")"
case "$MENU" in
    ## Light Colors
    *Contrast) $SDIR/colors.sh -mode1 ;;
    *Archlinux) $SDIR/colors.sh -mode2 ;;
    *Solarized) $SDIR/colors.sh -mode3 ;;
    *Crimson) $SDIR/colors.sh -mode4 ;;
    *Tropical) $SDIR/colors.sh -mode5 ;;
    *Aquamarine) $SDIR/colors.sh -mode6
esac
